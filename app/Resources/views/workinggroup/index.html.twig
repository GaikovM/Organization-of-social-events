{% extends 'base.html.twig' %}

{% block body %}
    {% include '@app/UserEvents/baseUserEvents.html.twig' %}

    <div class="container">
        <h1>Рабочая группа </h1>
        <h3> {{ event_name }}</h3>
        <table class="table table-condensed">
            <thead>
            <tr>
                <th>Имя пользователя</th>
                <th>Категория пользователя</th>
                <th>Действия</th>
            </tr>
            </thead>
            <tbody>
            {% for workingGroup in workingGroups %}
                <tr>
                    <td>{{ workingGroup.user }}</td>
                    <td>{{ workingGroup.categoryUsersEvent }}</td>

                    <td>

                        <ul class="nav navbar-nav">
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                                   aria-haspopup="true" aria-expanded="false">Действия <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a href="{{ path('event_workinggroup_edit', { 'id': workingGroup.id, 'id_event':id_event, 'key':'p' }) }}">Изменить
                                            (участники из подписчиков)</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('event_workinggroup_edit', { 'id': workingGroup.id, 'id_event':id_event, 'key':'g' }) }}">Изменить
                                            (участники из мероприятия)</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>

                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <ul class="list-inline">
            <a href="{{ path('event_workinggroup_new', {'id_event':id_event ,'key':'p' }) }} " class="btn btn-success">Добавить
                участника из подписчиков</a>
            <a href="{{ path('event_workinggroup_new', {'id_event':id_event ,'key':'g' }) }}" class="btn btn-success">Добавить
                участника из участников мероприятия</a>
            <a href="{{ path('user_panel_index') }}" class="btn btn-info">Отмена</a>
        </ul>
    </div>

{% endblock %}
